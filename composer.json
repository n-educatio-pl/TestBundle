{
    "name": "n-educatio/testbundle",
    "description": "Framework for Specification by Example and e2e testing",
    "homepage": "https://github.com/n-educatio/TestBundle",
    "authors": [
        {
            "name": "n-educatio",
            "email": "biuro@n-educatio.pl"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.5.*",        
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "doctrine/data-fixtures": "dev-master",
        "behat/mink-extension": "~1.2",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "behat/symfony2-extension": "*",
        "mockery/mockery": ">=0.7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpmd/phpmd": "~1.5",
        "zerkalica/phpcs": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "Neducatio\\TestBundle\\": "src/",
            "Acme\\AnimalBundle\\": "testapp/"
        }
    },



    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "zerkalica/phpcs",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/sfraszczak-neducatio/PHP_CodeSniffer.git",
                    "reference": "master"
                }
            }
        }
    ]
}
